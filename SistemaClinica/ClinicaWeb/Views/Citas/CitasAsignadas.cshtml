@section Estilos {
    <link href="~/lib/datatables2/css/datatables.datatables.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
}
<h2 class="mt-4 mb-4">Citas Asignadas</h2>

<div class="row">
    <div class="col-sm-12">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-chart-bar me-1"></i>
                Citas Asignadas
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <label class="col-form-label">Estado Cita:</label>
                        <select id="cboEstadoCita" class="form-select">
                            <option value="1">Pendiente</option>
                            <option value="2">Atendido</option>
                        </select>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-12">
                        <table class="display" id="tbData" cellspacing="0" style="width:100%">
                            <tbody></tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="mdData" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Resumen Cita</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-sm-12">
                        <label for="txtIndicaciones" class="form-label">Indicaciones</label>
                        <textarea class="form-control" id="txtIndicaciones" rows="3"></textarea>
                    </div>
                    
                </div>
                <div class="alert alert-primary">
                    <p>
                        Despues de ingresar las indicaciones,<br />
                        Presione "Terminar Cita" para marcar como ATENDIDO la cita.
                    </p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Volver</button>
                <button type="button" class="btn btn-primary" id="btnTerminarCita">Terminar Cita</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/lib/datatables2/js/moment.min.js"></script>
    <script src="~/lib/datatables2/js/datatables.js"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="~/views/citas/citasasignadas.js"></script>
}